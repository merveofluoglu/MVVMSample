@model MVVMViewModelLayer.BookViewModel

<div class="card">
    <div class="card-header bg-primary text-light">
        <h5 class="card-title">Search for Books</h5>
    </div>

    <div class="card-body">
        <div class="form-row">
            <div class="form-group col">
                <label asp-for="SearchEntity.Name" class="control-label"></label>
                <input asp-for="SearchEntity.Name" class="form-control"/>
            </div>
            <div class="form-group col">
                <label asp-for="SearchEntity.ListPrice" class="control-label"></label>
                <input asp-for="SearchEntity.ListPrice" class="form-control"/>
            </div>
            <div class="form-group col">
                <label asp-for="SearchEntity.Author" class="control-label"></label>
                <input asp-for="SearchEntity.Author" class="form-control" />
            </div>
        </div>
    </div>

    <div class="card-footer bg-primary text-light">
        <div class="row">
            <div class="col-4">
                <button type="button" data-custom-cmd="search" class="bnt btn-success">Search</button>
            </div>
            <div class="col-4">
                <button type="button" class="btn btn-dark" data-custom-cmd="add">Add New Book</button>
            </div>
            <div class="col-4">
                <p class="text-right">Total Records: @Model.TotalBooks</p>
            </div>
        </div>        
    </div>
</div>